<mvc:View controllerName="ns.fiori.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}" titleAlignment="Center">
        <customHeader>
            <Bar id="top">
                <contentLeft>
                    <Text id="tcode" text="I01T" />
                </contentLeft>
                <contentMiddle>
                    <Title id="title" text="{i18n>title}" />
                </contentMiddle>
                <contentRight>
                    <Image id="logo" src="./images/aimtec_logo.png" height="70%" />
                </contentRight>
            </Bar>
        </customHeader>
        <VBox id="main" width="100%" height="80%">
        <Label id="label" class="label" text="{/title}"/>
            <HBox id="btnBox" class="btnBox" width="100%" height="auto" justifyContent="SpaceAround">
                <Button class="btns" id="btnBack" text="{/btn1_text}" press="onBack" width="4rem"/> <!-- texty od stepana-->
                <Button class="btns" id="btnNext" text="{/btn2_text}" press="onNext" width="4rem"/>
            </HBox>
            <Input id="inp" class="inp" width="100%"/>
            <VBox id="textBox" height="auto" class="txts">
                <Text class="txt" text="{/scr_texts}"/> 
            </VBox>
        </VBox>
        <VBox id="footer" class="footer" width="100%" height="20%" justifyContent="Center" alignItems="Center">
            <core:Icon class="icon" src="sap-icon://accept"></core:Icon>
        </VBox>
    </Page>
</mvc:View>
