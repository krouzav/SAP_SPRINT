<mvc:View controllerName="ns.fiori.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <customHeader>
            <Bar id="top">
                <contentLeft>
                    <Text id="tcode" text="Tcode" />
                </contentLeft>
                <contentMiddle>
                    <Title id="title" text="{i18n>title}" />
                </contentMiddle>
                <contentRight>
                    <Image id="logo" src="./images/aimtec_logo.png" height="70%" />
                </contentRight>
            </Bar>
        </customHeader>
        <VBox width="100%" height="80%">
            <HBox id="btnBox" class="btnBox" width="100%" height="auto" justifyContent="SpaceAround" >
                <Button id="btnBack" text="Back" press="onBack"/> <!-- texty od stepana-->
                <Button id="btnNext" text="Next" press="onNext"/>
            </HBox>
            <Input id="inp" class="inp" width="100%"/>
            <Label id="label" class="label" text=""/>
        </VBox>
        <VBox class="footer" width="100%" height="20%">
        
        </VBox>
    </Page>
</mvc:View>
